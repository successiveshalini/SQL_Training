create database Hello1
use Hello1
create table Mohan(id int primary key, name varchar(100), City varchar(50),state varchar(50),salary float);
select * from Mohan
insert into Mohan(id, name, city, state, salary) values (1, 'soni', 'sharsa','bihar', 12905);
